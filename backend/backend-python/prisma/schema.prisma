generator client {
  provider             = "prisma-client-py"
  recursive_type_depth = "5"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             Int        @id @default(autoincrement())
  firstName      String
  lastName       String
  email          String     @unique
  password       String
  profilePicture String?
  birthDate      DateTime
  role           Role       @default(USER)
  createdAt      DateTime   @default(now())
  updatedAt      DateTime   @updatedAt
  purchases      Purchase[]
}

model Book {
  id         Int        @id @default(autoincrement())
  title      String
  author     String
  coverImage String
  synopsis   String?
  categories Json
  year       Int
  pdfUrl     String
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt
  purchases  Purchase[]
}

model Purchase {
  id           Int      @id @default(autoincrement())
  userId       Int
  bookId       Int
  purchaseDate DateTime @default(now())
  book         Book     @relation(fields: [bookId], references: [id])
  user         User     @relation(fields: [userId], references: [id])
}

enum Role {
  USER
  ADMIN
}
